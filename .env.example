# ==========================================
# CiteGuard Environment Configuration
# ==========================================

# Application Settings
DEBUG=True
SECRET_KEY=your-super-secret-key-change-this-in-production
APP_NAME=CiteGuard API
APP_VERSION=0.1.0

# ==========================================
# Database Configuration
# ==========================================
# Local PostgreSQL (default for development)
DATABASE_URL=postgresql://citeguard:citeguard@localhost:5432/citeguard

# Using Docker PostgreSQL
# DATABASE_URL=postgresql://citeguard:citeguard@postgres:5432/citeguard

# ==========================================
# Redis Configuration (Caching & Background Tasks)
# ==========================================
# Local Redis
REDIS_URL=redis://localhost:6379/0

# Using Docker Redis
# REDIS_URL=redis://redis:6379/0

# ==========================================
# Celery Configuration (Background Tasks)
# ==========================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ==========================================
# AI Services (Optional - for LLM features)
# ==========================================
# OpenAI API Key (for paraphrasing & analysis)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic API Key (for Claude paraphrasing)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Use local models instead of API calls (recommended for MVP)
USE_LOCAL_MODELS=True

# ==========================================
# NLP & Similarity Detection
# ==========================================
# HuggingFace model for similarity detection
SIMILARITY_MODEL=sentence-transformers/all-MiniLM-L6-v2
SIMILARITY_THRESHOLD=0.85
MAX_DOCUMENT_LENGTH=100000

# ==========================================
# External Academic APIs (Optional)
# ==========================================
# Semantic Scholar API Key
SEMANTIC_SCHOLAR_API_KEY=

# Crossref API email (for polite API usage)
CROSSREF_EMAIL=your-email@example.com

# ==========================================
# Security & Rate Limiting
# ==========================================
ACCESS_TOKEN_EXPIRE_MINUTES=1440
ALGORITHM=HS256
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ==========================================
# File Upload Settings
# ==========================================
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=.txt,.docx,.pdf

# ==========================================
# Feature Flags
# ==========================================
ENABLE_PARAPHRASING=True
ENABLE_CITATION_SEARCH=True
ENABLE_STYLE_ANALYSIS=False

# ==========================================
# Logging
# ==========================================
LOG_LEVEL=INFO
