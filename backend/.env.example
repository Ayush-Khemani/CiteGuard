# Application Settings
DEBUG=False
SECRET_KEY=your-super-secret-key-here-change-in-production
LOG_LEVEL=INFO

# Database (use Supabase or Neon for Vercel)
DATABASE_URL=postgresql://user:password@db-host:5432/citeguard

# Redis (use Upstash for Vercel)
REDIS_URL=redis://:password@redis-host:6379

# API Keys (optional but recommended)
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=your-anthropic-key-here

# External APIs
SEMANTIC_SCHOLAR_API_KEY=your-semantic-scholar-key
CROSSREF_EMAIL=your-email@example.com

# CORS Origins (add your Vercel domain here)
CORS_ORIGINS=["https://your-app.vercel.app", "chrome-extension://*", "http://localhost:8000"]

# Celery
CELERY_BROKER_URL=redis://:password@redis-host:6379/1
CELERY_RESULT_BACKEND=redis://:password@redis-host:6379/2
